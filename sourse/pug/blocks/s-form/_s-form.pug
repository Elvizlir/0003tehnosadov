mixin s-form()
	// start s-form
	+b.s-form.section.block-with-lazy#s-form&attributes(attributes)
		.container 
			.row
				.col-lg-3
					h2.strong.ttu БУДЬТЕ В КУРСЕ
					.ttu.fw-500.mb-2 ПОДПИШИТЕСЬ НА ПОСЛЕДНИЕ ОБНОВЛЕНИЯ И УЗНАВАЙТЕ О НОВИНКАХ И СПЕЦИАЛЬНЫХ ПРЕДЛОЖЕНИЯХ ПЕРВЫМИ
				.col
					+form-wrap
						.row
							.col
								+input()
							.col-md-auto
								+e.BUTTON.btn(type='submit') Подписаться
						+polite
	// end s-form